{
    "name": "compiler",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:rlxyz/compiler.git",
    "author": "rlxyz <dev@rlxyz.com>",
    "license": "MIT",
    "scripts": {
        "setup": "yarn install && cd api && yarn && cd ../client && yarn",
        "clean": "cd api && rm -rf node_modules/ && cd ../client && rm -rf node_modules/ && rm -rf node_modules",
        "reset": "yarn clean && yarn setup",
        "api:dev": "cd api && yarn watch",
        "client:dev": "cd client && yarn dev",
        "dev": "concurrently \"yarn api:dev\" \"yarn client:dev\""
    },
    "devDependencies": {
        "concurrently": "^5.3.0"
    }
}