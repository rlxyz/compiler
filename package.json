{
  "name": "@rhapsodylabs/layer-generator",
  "author": "Rhapsody Labs",
  "description": "A layer generator that takes image layers input and combines them to produce an image",
  "license": "MIT",
  "version": "1.1.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "src/**/*"
    ]
  },
  "keywords": [
    "generative",
    "genart",
    "canvas"
  ],
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf ./build && tsc",
    "build": "node build/index.js",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "publish": "npm publish",
    "version": "npm run format && git add .",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "canvas": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "jest": "^27.3.1",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2"
  }
}
